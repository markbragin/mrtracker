{
    "//": "Styles: https://github.com/Textualize/rich",
    "bindings": {
        "app": {
            "reset_focus": "escape",
            "quit": "ctrl+q",
            "switch_timer": "ctrl+p",
            "save_session": "ctrl+s",
            "discard_session": "ctrl+]",
            "show_help": "ctrl+h"
        },
        "tasklist": {
            "start_task": "enter",
            "go_down": "j",
            "go_up": "k",
            "go_to_parent": "p",
            "rename_entry": "r",
            "add_new_task": "n",
            "add_new_folder": "N",
            "add_child_task": "a",
            "add_child_folder": "A",
            "add_sibling_task": "s",
            "add_sibling_folder": "S",
            "delete_entry": "d",
            "toggle_folding": "o",
            "toggle_folding_recursively": "O",
            "toggle_all_entries_recursively": "z",
            "reset_entry_time": "u",
            "reset_entry_time_recursively": "U"
        }
    },
    "styles": {
        "HEADER": "bold",
        "HIGHLIGHTED_TASK": "yellow",
        "NORMAL_TASK": "white",
        "TASKLIST_HEADER": "magenta bold",
        "TASKLIST_BORDER": "white",
        "CURRENT_TASK_TEXT": "white",
        "CURRENT_TASK_GOOD_BORDER": "green",
        "CURRENT_TASK_BAD_BORDER": "red",
        "TIMER_TEXT": "white",
        "TIMER_BORDER": "white",
        "LOGGER_BORDER": "white",
        "LOGGER_ERROR_BORDER": "red",
        "LOGGER_HIGHLIGHT": "blue",
        "FOOTER": "white"
    }
}
