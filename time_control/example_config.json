{
    "//": "Styles: https://github.com/Textualize/rich",
    "bindings": {
        "app": {
            "reset_focus": "escape",
            "quit": "ctrl+q",
            "switch_timer": "ctrl+p",
            "save_session": "ctrl+s",
            "show_help": "ctrl+h"
        },
        "tasklist": {
            "start_task": ["enter"],
            "rename_task": ["r"],
            "go_down": ["j", "down"],
            "go_up": ["k", "up"],
            "toggle_folding": ["z"],
            "toggle_folding_recursively": ["Z"],
            "go_to_parent": ["p"],
            "go_to_parent_folder": ["P"],
            "add_folder": ["n"],
            "add_child_task": ["a"],
            "add_sibling_task": ["s"],
            "delete_task": ["x"]
        }
    },
    "styles": {
        "HEADER": "bold",
        "HIGHLIGHTED_TASK": "yellow",
        "NORMAL_TASK": "dim",
        "TASKLIST_HEADER": "white bold",
        "TASKLIST_BORDER": "white",
        "CURRENT_TASK_TEXT": "white",
        "CURRENT_TASK_GOOD_BORDER": "green",
        "CURRENT_TASK_BAD_BORDER": "red",
        "TIMER_TEXT": "white",
        "TIMER_BORDER": "white",
        "LOGGER_BORDER": "white",
        "LOGGER_ERROR_BORDER": "red",
        "LOGGER_HIGHLIGHT": "blue"
    }
}
